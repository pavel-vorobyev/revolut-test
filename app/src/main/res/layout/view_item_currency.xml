<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/flagContainerView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bg_currency_flag_border"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/flagView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/flagContainerView"
        app:layout_constraintEnd_toStartOf="@+id/valueInputView"
        app:layout_constraintStart_toEndOf="@+id/flagContainerView"
        app:layout_constraintTop_toTopOf="@id/flagContainerView">

        <TextView
            android:id="@+id/currencyIso3View"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_re"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/currencyNameView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_re"
            android:textColor="@color/gray1"
            android:textSize="14sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/valueInputView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/gray2"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/sf_re"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:minWidth="48dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>